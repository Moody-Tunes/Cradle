# Example ngninx configuration file /etc/nginx/
# Define config file in /sites-enabled/
# Add symlink to config file in /sites-available/
# Path names should be fully qualified

server {

    # Favicon location
    location = /favicon.ico {}

    # Static file serving
    location /static/ {
        alias $STATIC_DIR;  # Path to static files generated by Django
    }

    # Base URL handling
    location / {
        include proxy_params;  // Forward proxy headers in request
        proxy_pass $PROXY_PATH;  // Proxy to either IP address or socket
    }

    listen $PORT;  # Port on which to listen (80, 443)
    server_name $SERVER_NAME_1 $SERVER_NAME_2;   # Domain names to serve requests

}