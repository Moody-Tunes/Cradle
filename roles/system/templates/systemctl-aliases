# Aliases for systemctl

## systemctl specific commands
alias daemon-reload="sudo systemctl daemon-reload"
alias daemon-status="sudo systemctl status"

## systemctl worker commands
alias daemon-restart-all="sudo systemctl restart {{ all_daemon_processes }}"
alias daemon-start-all="sudo systemctl start {{ all_daemon_processes }}"
alias daemon-stop-all="sudo systemctl stop {{ all_daemon_processes }}"
alias daemon-status-all="sudo systemctl status {{ all_daemon_processes }}"

{% for daemon in daemon_processes %}
## {{ daemon }} commands
alias daemon-restart-{{ daemon }}="sudo systemctl restart {{ daemon }}"
alias daemon-start-{{ daemon }}="sudo systemctl start {{ daemon }}"
alias daemon-stop-{{ daemon }}="sudo systemctl stop {{ daemon }}"
alias daemon-status-{{ daemon }}="sudo systemctl status {{ daemon }}"

{% endfor %}
